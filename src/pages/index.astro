---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
// 1. Obtiene todos los posts de la colección 'posts'
const allPosts = await getCollection('posts');
// Opcional: ordenarlos por fecha y tomar solo los 3 más recientes
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const recentPosts = sortedPosts.slice(0, 3);

// Función para extraer un fragmento del contenido markdown
function getExcerpt(content: string, maxLength: number = 150): string {
  // Remover el frontmatter y las imágenes del inicio
  const cleanContent = content
    .replace(/^---[\s\S]*?---/, '') // Remover frontmatter
    .replace(/!\[.*?\]\(.*?\)/g, '') // Remover imágenes
    .replace(/#{1,6}\s+/g, '') // Remover headers
    .replace(/\*\*(.*?)\*\*/g, '$1') // Remover bold
    .replace(/\*(.*?)\*/g, '$1') // Remover italic
    .replace(/\[([^\]]+)\]\([^\)]+\)/g, '$1') // Remover links
    .trim();
  
  if (cleanContent.length <= maxLength) {
    return cleanContent;
  }
  
  return cleanContent.substring(0, maxLength).trim() + '...';
}
---

<BaseLayout>
	<h1>Más recientes:</h1>
    <div class="posts-grid">
      {
        recentPosts.map(async (post) => {
          const excerpt = getExcerpt(post.body);          
          return (
            <article class="post-card">
              <div class="post-layout">
                {post.data.image && (
                  <div class="post-thumbnail">
                    <Image
                      src={post.data.image.url}
                      alt={post.data.image.alt}
                      width={200}
                      height={150}
                      loading="lazy"
                    />
                  </div>
                )}
                <div class="post-content">
                  <h2 class="post-title">
                    <a href={`/blog/${post.slug}/`}>{post.data.title}</a>
                  </h2>
                  <p class="post-description">{post.data.description}</p>
                  <p class="post-excerpt">{excerpt}</p>
                  <a href={`/blog/${post.slug}/`} class="read-more-btn">Ver más</a>
                </div>
              </div>
              <div class="post-date-footer">
                 <small>{post.data.pubDate.toLocaleDateString('es-ES', { day: 'numeric', month: 'long', year: 'numeric' })}</small>
               </div>
            </article>
          )
        })
      }
    </div>
</BaseLayout>

<style>
  .posts-grid {
    display: grid;
    gap: 2rem;
    margin-top: 2rem;
  }

  .post-card {
    background: #fdfdfd;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .post-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .post-layout {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    padding: 1.5rem;
  }

  .post-thumbnail {
    flex-shrink: 0;
    width: 200px;
    height: 150px;
    overflow: hidden;
    border-radius: 8px;
  }

  .post-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .post-content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .post-title {
    margin: 0 0 0.5rem 0;
    font-size: 1.1rem;
    font-weight: 600;
    line-height: 1.3;
  }

  .post-title a {
    color: #2d3748;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .post-title a:hover {
    color: #4a5568;
  }

  .post-description {
    color: #4a5568;
    font-size: 0.85rem;
    margin: 0 0 0.5rem 0;
    font-weight: 500;
  }

  .post-excerpt {
    color: #718096;
    font-size: 0.8rem;
    line-height: 1.4;
    margin: 0 0 1rem 0;
    flex: 1;
  }

  .read-more-btn {
    background: #4299e1;
    color: white;
    padding: 0.4rem 0.8rem;
    border-radius: 6px;
    text-decoration: none;
    font-size: 0.75rem;
    font-weight: 500;
    transition: background-color 0.3s ease;
    align-self: flex-start;
  }

  .read-more-btn:hover {
    background: #3182ce;
  }

  .post-date-footer {
    margin: 0;
    padding: 1rem 0;
    margin-left: 240px; /* Padding layout (24px) + Ancho de imagen (200px) + gap (16px) */
    margin-right: 1.5rem;
    border-top: 1px solid #333;
    text-align: right;
  }

  .post-date-footer small {
    font-size: 0.8rem;
    font-style: italic;
    color: #666;
  }

  /* Responsive design */
  @media (min-width: 768px) {
    .posts-grid {
      grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    }
  }

  @media (max-width: 767px) {
    .post-layout {
      flex-direction: column;
      padding: 1rem;
    }
    
    .post-thumbnail {
      width: 100%;
      height: 180px;
    }
    
    .post-date-footer {
      margin-left: 1rem;
      margin-right: 1rem;
      padding: 1rem 0;
      text-align: center;
    }
  }
</style>
